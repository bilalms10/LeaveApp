<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Chat - Leave Management</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .chat-container {
            height: 500px;
            overflow-y: auto;
            border: 1px solid var(--border-light);
            border-radius: var(--radius-medium);
            padding: var(--space-md);
            background: var(--bg-secondary);
        }
        
        .message {
            margin-bottom: var(--space-md);
            animation: fadeInUp 0.3s ease-out;
        }
        
        .message-header {
            display: flex;
            align-items: center;
            gap: var(--space-sm);
            margin-bottom: var(--space-xs);
        }
        
        .message-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 12px;
        }
        
        .lead-avatar {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-hover));
        }
        
        .employee-avatar {
            background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-hover));
        }
        
        .message-info {
            display: flex;
            align-items: center;
            gap: var(--space-sm);
        }
        
        .sender-name {
            font-weight: 600;
            color: var(--text-primary);
        }
        
        .sender-role {
            font-size: 11px;
            padding: 2px 6px;
            border-radius: 10px;
            text-transform: uppercase;
            font-weight: 600;
        }
        
        .role-lead {
            background: var(--gold-light);
            color: var(--gold-dark);
        }
        
        .role-employee {
            background: var(--primary-blue-light);
            color: var(--primary-blue);
        }
        
        .message-time {
            font-size: 11px;
            color: var(--text-tertiary);
        }
        
        .message-content {
            background: var(--bg-primary);
            padding: var(--space-sm);
            border-radius: var(--radius-small);
            margin-left: 40px;
            box-shadow: var(--shadow-light);
            border-left: 3px solid var(--border-light);
        }
        
        .message.own .message-content {
            background: linear-gradient(135deg, var(--primary-blue-light), var(--bg-primary));
            border-left-color: var(--primary-blue);
        }
        
        .chat-input {
            position: sticky;
            bottom: 0;
            background: var(--bg-primary);
            padding: var(--space-md);
            border-top: 1px solid var(--border-light);
            border-radius: 0 0 var(--radius-medium) var(--radius-medium);
        }
        
        .input-group {
            display: flex;
            gap: var(--space-sm);
        }
        
        .message-input {
            flex: 1;
            padding: var(--space-sm);
            border: 1px solid var(--border-medium);
            border-radius: 20px;
            resize: none;
            min-height: 40px;
            max-height: 100px;
        }
        
        .send-btn {
            padding: var(--space-sm) var(--space-md);
            background: var(--gold-primary);
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.2s ease;
            min-width: 80px;
        }
        
        .send-btn:hover {
            background: var(--gold-hover);
            transform: translateY(-1px);
        }
        
        .online-indicator {
            width: 8px;
            height: 8px;
            background: var(--success-green);
            border-radius: 50%;
            position: absolute;
            bottom: 2px;
            right: 2px;
            border: 2px solid white;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="navbar-content">
            <div class="navbar-brand">Leave Management System</div>
            <div class="navbar-nav">
                <% if (userRole === 'lead') { %>
                    <a href="/lead-dashboard" class="nav-link">Dashboard</a>
                    <a href="/employees" class="nav-link">Employees</a>
                    <a href="/add-employee" class="nav-link">Add Employee</a>
                <% } else { %>
                    <a href="/employee-dashboard" class="nav-link">Dashboard</a>
                    <a href="/apply-leave" class="nav-link">Apply Leave</a>
                    <a href="/change-password" class="nav-link">Change Password</a>
                <% } %>
                <a href="/chat" class="nav-link active">Team Chat</a>
                <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Header -->
        <div class="card mb-4" style="animation: fadeInUp 0.6s ease-out;">
            <div class="card-header">
                <h1 class="mb-1">üí¨ Team Chat</h1>
                <p class="text-muted mb-0">Communicate with your team members</p>
            </div>
        </div>

        <!-- Chat Area -->
        <div class="card" style="animation: fadeInUp 0.6s ease-out 0.2s both;">
            <div class="chat-container" id="chatContainer">
                <% if (messages.length === 0) { %>
                    <div class="text-center" style="padding: 60px 20px;">
                        <div style="font-size: 48px; margin-bottom: 20px; opacity: 0.5;">üí¨</div>
                        <h3 class="text-muted mb-3">No messages yet</h3>
                        <p class="text-muted">Start the conversation by sending the first message!</p>
                    </div>
                <% } else { %>
                    <% messages.forEach(message => { %>
                        <div class="message <%= message.senderId.toString() === userId ? 'own' : '' %>">
                            <div class="message-header">
                                <div class="message-avatar <%= message.senderRole === 'lead' ? 'lead-avatar' : 'employee-avatar' %>" style="position: relative;">
                                    <%= message.senderName.split(' ').map(n => n.charAt(0)).join('').substring(0, 2).toUpperCase() %>
                                    <div class="online-indicator"></div>
                                </div>
                                <div class="message-info">
                                    <span class="sender-name"><%= message.senderName %></span>
                                    <span class="sender-role role-<%= message.senderRole %>"><%= message.senderRole %></span>
                                    <span class="message-time"><%= new Date(message.timestamp).toLocaleString() %></span>
                                </div>
                            </div>
                            <div class="message-content">
                                <%= message.message %>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
            
            <!-- Chat Input -->
            <div class="chat-input">
                <form method="POST" action="/chat" id="chatForm">
                    <div class="input-group">
                        <textarea 
                            name="message" 
                            class="message-input" 
                            placeholder="Type your message here..." 
                            required
                            rows="1"
                            id="messageInput"
                        ></textarea>
                        <button type="submit" class="send-btn">
                            <span>üì§ Send</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Chat Guidelines -->
        <div class="card mt-4" style="animation: fadeInUp 0.6s ease-out 0.4s both;">
            <div class="card-header">
                <h3 class="mb-0">üìã Chat Guidelines</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <div style="padding: 12px; background: var(--success-green-light); border-radius: 8px; text-align: center;">
                            <div style="font-size: 24px; margin-bottom: 8px;">ü§ù</div>
                            <div style="font-size: 12px; color: var(--success-green); font-weight: 600;">BE RESPECTFUL</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div style="padding: 12px; background: var(--primary-blue-light); border-radius: 8px; text-align: center;">
                            <div style="font-size: 24px; margin-bottom: 8px;">üíº</div>
                            <div style="font-size: 12px; color: var(--primary-blue); font-weight: 600;">WORK RELATED</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div style="padding: 12px; background: var(--gold-light); border-radius: 8px; text-align: center;">
                            <div style="font-size: 24px; margin-bottom: 8px;">üîí</div>
                            <div style="font-size: 12px; color: var(--gold-dark); font-weight: 600;">CONFIDENTIAL</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-scroll to bottom
        const chatContainer = document.getElementById('chatContainer');
        chatContainer.scrollTop = chatContainer.scrollHeight;
        
        // Auto-resize textarea
        const messageInput = document.getElementById('messageInput');
        messageInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 100) + 'px';
        });
        
        // Send message on Enter (but allow Shift+Enter for new line)
        messageInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                document.getElementById('chatForm').submit();
            }
        });
        
        // Auto-refresh chat every 10 seconds
        setInterval(() => {
            if (document.visibilityState === 'visible') {
                location.reload();
            }
        }, 10000);
        
        // Focus on message input
        messageInput.focus();
    </script>
</body>
</html>